<br />
  <div class="col-xs-4">
    <%= image_tag 'Username.png' %>
  </div>
  <div class="clr"></div>
  <div class="col-xs-8">
    <h3><%= current_user.email %></h3>
    <h4>Member Since: <%=current_user.created_at.strftime("%B %d, %Y")  %></h4>
  </div>
  <div class="clr"></div>
<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>What I'm Learning</h1>
  <% if current_user.enrolled_courses[0].nil? %>
      <h3 class="text-center">I am not currently enrolled any classes.</h3>
  <% end %>
  <% current_user.enrolled_courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h3>
    <br />
    <%= image_tag course.image, :class => 'img_responsive col-sm-6'%>
    <br />
    <div class="col-sm-2"></div>
      <div class="col-sm-6">
        <%= course.description %>
      </div>
    <div class="col-xs-12 col-sm-4 text-center">
      <%= link_to "More Info...", course_path(course), :class => 'btn btn-lg btn-primary' %>
    </div>
    <hr class="col-xs-8 col-xs-offset-2">
    <br class="clr" />
  <% end %>
  <br />
  <br />

  <h1>What I'm Teaching</h1>
  <% if current_user.courses[0].nil? %>
      <h3 class="text-center">I am not currently teaching any classes.</h3>
  <% end %>
  <% current_user.courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h3>
    <br />
    <%= image_tag course.image, :class => 'img_responsive col-xs-12'%>
    <br />
    <br />
    <div class="col-sm-2"></div>
      <div class="col-sm-6">
        <br />
        <%= course.description %>
      </div>

    <div class="col-xs-12 col-sm-4 text-center">
      <br />
      <%= link_to "More Info...", course_path(course), :class => 'btn btn-lg btn-primary' %>
    </div>
    <hr class="col-xs-8 col-xs-offset-2">
    <br class="clr" />
  <% end %>
</div>
